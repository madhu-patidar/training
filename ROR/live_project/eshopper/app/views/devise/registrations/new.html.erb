<section id="form"><!--form-->
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
        <div class="login-form"><!--sginup form-->
    
          <h2>New User Signup!</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
            
            <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>
            
            <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "off",placeholder:"Password" %>
            <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, autocomplete: "off",placeholder:"Confirm-Password" %>
            <span>
              <%= f.check_box :remember_me,class:"checkbox" %>
              Keep me signed in
            </span><%= f.submit "Sign Up",class:"btn btn-primary" %>
            
            <% end %>
            <%= render "devise/shared/links" %>
          
        </div><!--/sginup form-->
      </div>
      
      </div>
    </div>
  </div>
</section><!--/form-->
  
  



