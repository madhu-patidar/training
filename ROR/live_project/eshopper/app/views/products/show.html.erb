                  <%= f.number_field "quantity", in: 1..2000, step: 1, :value => 1 %>
                  <%= hidden_field_tag :product_id, @product.id %>
                  <%= hidden_field_tag :controller_name, :product %>
                  <%= f.button(type: "submit", class: "btn btn-fefault cart") do %><i class="fa fa-shopping-cart"></i>Add to cart<% end %>
                </span>
              <% end %>
              <p><b>Availability:</b><% if @product.quantity > 0 %>
               In Stock <% else %> Out Of Stock<% end %> </p>
              <p><b>Condition:</b> New</p>
              <p><b>Brand:</b> <%= @product.brand.name.upcase %></p>
              <a href=""><%= image_tag "product-details/share.png", class: "share img-responsive"  %></a>
