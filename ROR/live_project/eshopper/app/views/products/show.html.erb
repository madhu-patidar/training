              <%= form_for @cart_item , :url => { :controller => "cart_items", :action => "create" }, :html => {:method => :post, remote: true} do |f| %>
                <h2><%= @product.name %></h2>
                <p>Web ID: 1089772</p>
                <%= image_tag "product-details/rating.png" %>
                <span id= "item<%= @product.id%>">
                  <span>&#8377;<%= @product.price %></span>
