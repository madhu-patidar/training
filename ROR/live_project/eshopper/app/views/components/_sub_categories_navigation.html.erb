<% @categories.each do |category|%>  
  <% if category.name =="MENS" %>
     <% category.sub_categories.each_with_index do |subcategory,index| %>
         <%if @sub.present?%>
        <li class="<%= "active" if subcategory.id == @sub.id%>">
      <%else%>
        <li class="<%= "active" if index == 0%>">
      <% end %>
          <%= link_to(root_path(sub_category_id: subcategory.id)) do %>
            <% if subcategory.name.start_with?('<') %>
              <%= subcategory.name.split(">")[1] %>
            <% elsif %>
              <%= subcategory.name %>
            <% end %>
          <% end %>
        </li>
      <% end %>
  <% end %>
<% end %>

