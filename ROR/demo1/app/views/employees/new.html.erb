<%= form_for :employee, url: employees_path do |f| %>
  <p>
    <%= f.label :Name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :Designation %><br>
    <%= f.text_area :designation %><br>
  </p>
  <p>
    <%= f.label :Salary %><br>
    <%= f.text_field :salary %><br>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>