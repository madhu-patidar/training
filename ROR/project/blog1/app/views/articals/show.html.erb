<p>
  <strong>Title:</strong>
  <%= @artical.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @artical.text %>
</p>

<h3>Comments</h3>
<% @artical.comments.each do |c| %>
  <p>
    <strong>Commenter:</strong>
    <%= c.commenter %>
  </p>
  <p> <strong>Comment:</strong>
    <%= c.comment %>
  </p>
  <p>
     <%= link_to 'Destroy Comment', [c.artical, c],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
   
  </p>  
<%end%>


<h3>Add Comment</h3>
<%=form_for ([@artical , @artical.comments.build]) do |f| %>
  <p>
    <%=f.label :comment%>
    <%=f.text_field :comment%>
  </p>
  <p>
    <%=f.label :commenter%>
    <%=f.text_field :commenter%>
  </p>
  <p>
    <%=f.submit%>
  </p>
<%end%>