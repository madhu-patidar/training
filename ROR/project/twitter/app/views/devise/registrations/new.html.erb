
  <div class="gn lbg">
    <div class="qv rc aog1 alu">
      <div class="qx1">
        <h2 style="text-align:center">Sign up</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="col-xs-12 field">
          <%= f.label :email,style:"margin-left:20px" %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
        <div class="col-xs-12 field">
          <%= f.label :name,style:"margin-left:20px" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="col-xs-12 field">
          <%= f.label :password,style:"margin-left:20px" %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <div class=" col-xs-12 field">
          <%= f.label :password_confirmation,style:"margin-left:20px" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="actions", style="margin-bottom: 20px;text-align:center">
          <%= f.submit "Sign up",class: "btn btn-default" %>
        </div>
       <% end %>

        <div style="margin-bottom: 20px;margin-top: 20px; text-align:center">
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
